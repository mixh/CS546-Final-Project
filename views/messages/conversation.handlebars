<body>
  <h1>Conversation with {{muName}}</h1>

  <ul class="messages">
    {{#each messages}}
      {{#if (eq senderId ../userId)}}
        <li class="right">
          {{!-- <span class="reciever">{{../currtUser}}</span> --}}
          <span class="content">{{content}}</span>
          <span class="timestamp">{{createdAt}}</span>
        </li>
      {{else}}
        <li class="left">
          <span class="sender">{{senderName}}</span>
          <span class="content">{{content}}</span>
          <span class="timestamp">{{createdAt}}</span>
        </li>
      {{/if}}
    {{/each}}
  </ul>
  <form action="/messages/{{userId}}/messages/{{matchUserId}}/send" method="post" id="form10">
    <input type="text" name="content" placeholder="Type your message..." required>
    <input type="submit" value="Send" >
  </form>
