        <a class="nav-link btn btn-danger" href="/logout">Logout</a>
      </li>
      <li class="nav-item">
        <a class="nav-link btn btn-light" href="/delete/{{userId}}">Delete Account</a>
      </li>
    </ul>
  </div>
</nav>
</div>

<br><br>


   <h1>Conversation with {{muName}}</h1>

  <ul>
    {{#each messages}}
    <li> {{createdAt}} </li>
    <li> {{senderName}}: {{content}}</li>
    {{/each}}
  </ul>

  <form action="/messages/{{userId}}/messages/{{matchUserId}}/send" method="post">
    <input type="text" name="content" placeholder="Type your message..." required>
    <input type="submit" value="Send">
  </form>