  <ul style="list-style: none; display: flex; justify-content: space-between; align-items: center;  padding: 10px;">
    <li style="margin-right: auto;">
      <a href="/home/{{user._id}}" class="button" style="color: white; text-decoration: none;">Home</a>
      
    </li>
    <li style="margin-right: 10px;">
      <a href="/matches/{{user._id}}" class="button" style="color: white; text-decoration: none;">Matches</a>
  
    </li>
    <li style="margin-right: 10px;">
      <a href="/potentialMatches/{{user._id}}?distance=all" class="button" style="color: white; text-decoration: none;">Potential Matches</a>
     
    </li>
    <li style="margin-right: 10px;">
      <a href="/profile/{{user._id}}" class="button" style="color: white; text-decoration: none;">Profile</a>
     
    </li>
    <li style="margin-right: 10px;">
      <a href="/messages/{{user._id}}/messages" class="button" style="color: white; text-decoration: none;">Messages</a>
     
    </li>
    <li>
      <a href="/logout" class="button" style="color: white; text-decoration: none;">Logout</a>
    </li>
  </ul>
<div>
  <h1>Profile</h1>
  {{#if user.image.path}}
    <img src="/{{user.image.destination}}/{{user.image.filename}}" alt="Profile image">
  {{else}}
    <p>No image uploaded</p>
  {{/if}}
  <p>Name: {{user.name}}</p>
  <p>Age: {{user.age}}</p>
  <p>City: {{user.city_name}}</p>
  <p>Zip : {{user.zip}}</p>
  <p>Bio: {{user.bio}}</p>
  <p>University : {{user.university}} </p>
  <p>Bucketlist : {{user.bucketlist}}</p>
  <p>Gym : {{user.gym}} </p>
  <p>Work : {{user.work}} </p>
</div>
  {{#if user.isPaused}}
  <form method="POST" action="/profile/{{user._id}}/pause">
    <button type="submit">Unpause profile</button>
  </form><br><br>
  {{else}}
  <form method="POST" action="/profile/{{user._id}}/pause">
    <button type="submit">Pause profile</button>
  </form><br><br>
  {{/if}}
  <a href="/profile/{{user._id}}/edit?gender={{user.gender}}&university={{user.university}}&bucketlist={{user.bucketlist}}&gym={{user.gym}}">Edit profile</a><br><br>
  <a href="/home/{{user._id}}" class="button">Go to Home</a>
  