<div>
  <h1>Profile</h1>
  {{#if user.image.path}}
    <img src="/{{user.image.destination}}/{{user.image.filename}}" alt="Profile image">
  {{else}}
    <p>No image uploaded</p>
  {{/if}}
  <p>Name: {{user.name}}</p>
  <p>Age: {{user.age}}</p>
  <p>City: {{user.city_name}}</p>
  <p>Zip : {{user.zip}}</p>
  <p>Gender : {{user.gender}}</p>
  <p>Bio: {{user.bio}}</p>
  <p>University : {{user.university}} </p>
  <p>Bucketlist : {{user.bucketlist}}</p>
  <p>Gym : {{user.gym}} </p>
  <p>Work : {{user.work}} </p>
</div>
<div>
  <a href="/profile/{{user._id}}/edit?gender={{user.gender}}&university={{user.university}}&bucketlist={{user.bucketlist}}&gym={{user.gym}}" class="btn btn-primary">Edit profile</a>
