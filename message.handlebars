{{!-- this page implements messaging features --}}
<Doctype html>
<title>this is the Messages page</title>
<script src ="../data/users.js" src="../data/"></script>
{{# for m in matches }}
<h1></h1>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h4>Matches</h4>
      <ul class="list-group">
        {{#each matches}}
        <li class="list-group-item">
          <img src="{{this.profilePic}}" alt="{{this.name}}" class="profile-pic">
          <span class="match-name">{{this.name}}</span>
        </li>
        {{/each}}
      </ul>
    </div>
    <div class="col-md-8">
      <h4>Messages</h4>
      {{#if selectedMatch}}
      <div class="message-thread">
        {{#each messages}}
        <div class="message {{#if this.fromMe}}sent{{else}}received{{/if}}">
          <p class="message-text">{{this.text}}</p>
          <span class="message-timestamp">{{formatDate this.timestamp}}</span>
        </div>
        {{/each}}
      </div>
      <form class="send-message-form">
        <div class="form-group">
          <textarea class="form-control" placeholder="Type your message here" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Send</button>
      </form>
      {{else}}
      <p>Please select a match to start chatting.</p>
      {{/if}}
    </div>
  </div>
</div>


